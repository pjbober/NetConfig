<UserControl x:Class="ASK.GUI.OptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="#FF2222B8">
    <StackPanel>
        <Button Content="{Binding Profile.Name, Mode=TwoWay}" TextBlock.TextAlignment="Left" />
        <Button Content="{Binding Profile.SSID}" TextBlock.TextAlignment="Left" />
        <Button Content="{Binding Profile.Signal}"  TextBlock.TextAlignment="Left" />
        <Button Content="{Binding Profile.Authentication}"  TextBlock.TextAlignment="Left" />
    </StackPanel>
</UserControl>
