<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gui="clr-namespace:ASK.GUI"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ASK.MainWindow"
     Title="Net Config" 
        Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}" 
        Width="480" ResizeMode="NoResize" Top="0" Topmost="True" Loaded="Window_Loaded" MouseLeave="Window_MouseLeave" MouseEnter="Window_MouseEnter" ShowInTaskbar="False" AllowsTransparency="True" WindowStyle="None" Background="{DynamicResource WindowBackgroundColor}">
    <Grid x:Name="mainGrid" d:DataContext="{d:DesignData /SampleData/DummyNetsListViewModelSampleData.xaml}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="1" x:Name="closingButton" Style="{StaticResource CloseButton}"
                HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Click="closingButton_Click" Width="20" Height="20">
            <Button.Content>
                <Image Source="Images/close.png" Width="16" Height="16"></Image>
            </Button.Content>
        </Button>

        <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="{StaticResource BluePressedColor}"/>
        <Button Grid.Row="1" Grid.Column="0" x:Name="newConfigButton"
                Content="Dodaj nowy profil" HorizontalAlignment="Left"
                Click="newConfigButton_Click"
                Height="Auto" Width="Auto" Style="{StaticResource ToolButton}"/>
        
        <gui:NetsList x:Name="netsList" Grid.Row="0" Grid.Column="0" Margin="10" DataContext="{Binding}" />
        <gui:OptionsControl x:Name="optionsControl" Grid.Row="2" Grid.Column="0" Margin="10" Grid.RowSpan="2"/>

        <!--<Border Grid.Row="1" Grid.ColumnSpan="2" Background="{StaticResource BlueColor}"/>-->

    </Grid>
</Window>
